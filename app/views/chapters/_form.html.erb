<%= form_for [@section, @chapter] do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :chapter_title %><br>
    <%= f.text_field :chapter_title %>
  </div>
  <div class="field">
    <%= f.label :chapter_number %><br>
    <%= f.text_field :chapter_number %>
  </div>

   <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, style:"width: 100%; max-width: 100%", rows:10 %>
  </div>

  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, style:"width: 100%; max-width: 100%", rows:10 %>
  </div>

  <div id="questions">
    <%= f.fields_for :questions do |builder| %>
      <%= render "question_fields", f: builder %>
    <% end %>

    <%= link_to_add_association "Add Question", f, :questions %>
  </div>
  
  <div class="actions">
    <%= f.submit "Submit", class:"btn btn-primary" %>
  </div>
<% end %>
