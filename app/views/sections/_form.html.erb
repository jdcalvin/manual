<%= form_for(@section) do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :section_title %><br>
    <%= f.text_field :section_title %>
  </div>
  <div class="field">
    <%= f.label :section_number %><br>
    <%= f.text_field :section_number %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class:"btn btn-primary" %>
  </div>
<% end %>
